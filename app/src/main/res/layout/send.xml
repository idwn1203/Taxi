<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TableRow>

        <EditText
            android:id="@+id/t_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="10"/>

        <Button
            android:id="@+id/b_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="출발지" />

    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/t_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="10"/>
        <Button
            android:id="@+id/b_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="도착지" />

    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/t_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="10"/>
        <Button
            android:id="@+id/b_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="인원수" />

    </TableRow>


    <TableRow>
        <EditText
            android:id="@+id/t_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="10"/>
            />
        <Button
            android:id="@+id/b_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호출" />

    </TableRow>

</TableLayout>
